<!-- component -->
<%= form_with(model: [:admin, event], local: true) do |form| %>
  <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800">
    <label class="block text-sm">
      <span class="text-gray-700 dark:text-gray-400">Title</span>
      <%= form.text_field :title, class: "block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input", placeholder: "Title" %>            
    </label>
    <div class="block mt-6 text-sm">
      <span class="text-gray-700 dark:text-gray-400">Content</span>
      <%= form.rich_text_area :content, class: "block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-textarea focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray", placeholder: "Describe everything about this event here" %>                
    </div>
    <label class="block text-sm">
      <span class="text-gray-700 dark:text-gray-400">Date</span>
      <%= form.date_field :started_at, class: "block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input", placeholder: "Title" %>            
    </label>
    <div class="flex mt-6 text-sm">
      <label class="flex items-center dark:text-gray-400">
        <input type="checkbox" class="text-purple-600 form-checkbox focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray" />
        <span class="ml-2">
          I agree to the
          <span class="underline">privacy policy</span>
        </span>
      </label>
    </div>
        <!-- buttons -->
    <div class="buttons flex">
      <%= link_to 'Cancel', admin_events_path, class: "btn border border-gray-300 py-3 px-10 rounded font-semibold cursor-pointer text-gray-500 ml-auto" %>
      <%= form.submit class: "btn border border-indigo-600 py-3 px-10 rounded font-semibold cursor-pointer text-gray-200 ml-2 bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
<% end %>